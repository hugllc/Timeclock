    <files>
        <filename>dfprojectbilling.php</filename>
        <filename>dfprojectbilling.html.php</filename>
        <filename>dfprojectbilling.class.php</filename>
    </files>
    <install>
        <queries>
            <query>
                CREATE TABLE IF NOT EXISTS `#__dfproject_billing` (
                  `id` int(11) NOT NULL auto_increment,
                  `company` varchar(64) NOT NULL default '',
                  `name` varchar(64) NOT NULL default '',
                  `address1` varchar(64) NOT NULL default '',
                  `address2` varchar(64) NOT NULL default '',
                  `city` varchar(64) NOT NULL default '',
                  `state` varchar(64) NOT NULL default '',
                  `zip` varchar(10) NOT NULL default '',
                  `country` varchar(64) NOT NULL default 'US',
                  `notes` text NOT NULL,
                  PRIMARY KEY  (`id`)
                );
            </query>
       </queries>
    </install>
    <uninstall>
        <queries>
         </queries>
    </uninstall>
    <installfile>
        <filename>install.dfprojectbilling.php</filename>
    </installfile>
    <uninstallfile>
        <filename>uninstall.dfprojectbilling.php</filename>
    </uninstallfile>
    <administration>
        <menu>DFProject Billing</menu>
        <submenu>
            <menu task="userprefs">Set User Preferences</menu>
            <menu task="install">Check Installation</menu>
            <menu task="config">Configuration</menu>
            <menu task="about">About</menu>
        </submenu>
        <files>
            <filename>admin.dfprojectbilling.php</filename>
            <filename>admin.dfprojectbilling.html.php</filename>
            <filename>toolbar.dfprojectbilling.php</filename>
            <filename>toolbar.dfprojectbilling.html.php</filename>
            <filename>help/billing.html</filename>
            <filename>help/billing_edit.html</filename>
            <filename>dfprojectbilling.class.php</filename>
        </files>
    </administration>
</mosinstall>
