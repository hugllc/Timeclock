<mosinstall type="component">
    <name>DFProjectbilling</name>
    <creationDate>August 2006</creationDate>
    <author>Scott Price</author>
    <copyright>2006-2007 Scott Price</copyright>
    <authorEmail>prices@dflytech.com</authorEmail>
