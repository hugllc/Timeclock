<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="HUGLLC\Component\Timeclock\Administrator\Field">
    <fieldset name="main" label="COM_TIMECLOCK_EDIT_CUSTOMER">
        <field
            name="name"
            type="text"
            label="COM_TIMECLOCK_CONTACT_NAME"
            description="COM_TIMECLOCK_CONTACT_NAME_CUSTOMER_DESC"
            size="40"
            required="true"
        />
        <field
            name="company"
            type="text"
            label="COM_TIMECLOCK_COMPANY"
            description="COM_TIMECLOCK_COMPANY_CUSTOMER_DESC"
            size="40"
            required="true"
        />
        <field
            name="address1"
            type="text"
            label="COM_TIMECLOCK_ADDRESS1"
            description="COM_TIMECLOCK_ADDRESS1_CUSTOMER_DESC"
            size="64"
        />
        <field
            name="address2"
            type="text"
            label="COM_TIMECLOCK_ADDRESS2"
            description="COM_TIMECLOCK_ADDRESS2_CUSTOMER_DESC"
            size="64"
        />
        <field
            name="city"
            type="text"
            label="COM_TIMECLOCK_CITY"
            description="COM_TIMECLOCK_CITY_CUSTOMER_DESC"
            size="40"
        />
        <field
            name="state"
            type="text"
            label="COM_TIMECLOCK_STATE"
            description="COM_TIMECLOCK_STATE_CUSTOMER_DESC"
            size="20"
        />
        <field
            name="zip"
            type="text"
            label="COM_TIMECLOCK_ZIP"
            class="span2"
            description="COM_TIMECLOCK_ZIP_CUSTOMER_DESC"
            size="10"
        />
        <field
            name="country"
            type="text"
            label="COM_TIMECLOCK_COUNTRY"
            class="span4"
            description="COM_TIMECLOCK_COUNTRY_CUSTOMER_DESC"
            size="40"
        />
        <field
            name="notes"
            type="textarea"
            label="COM_TIMECLOCK_NOTES"
            description="COM_TIMECLOCK_NOTES_CUSTOMER_DESC"
            rows="3"
            cols="40"
        />
    </fieldset>
    <fieldset name="sidebar" label="COM_TIMECLOCK_EDIT_CUSTOMER">
        <field
            name="published"
            type="list"
            class="form-select-color-state"
            default="1"
            size="1"
            label="JSTATUS"
            required="true"
            description="COM_TIMECLOCK_ACTIVE_CUSTOMER_DESC">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
            name="bill_pto"
            type="list"
            class="advancedSelect"
            default="0"
            size="1"
            label="COM_TIMECLOCK_BILL_FOR_PTO"
            required="true"
            description="COM_TIMECLOCK_BILL_FOR_PTO_CUSTOMER_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fieldset>
    <fieldset name="hidden">
        <field
            type="hidden"
            name="checked_out"
            default="0"
        />
        <field
            type="hidden"
            name="checked_out_time"
            default="0000-00-00 00:00:00"
        />
        <field
            type="hidden"
            name="created_by"
            default="0"
        />
        <field
            type="hidden"
            name="created"
            default="0000-00-00 00:00:00"
        />
        <field
            type="hidden"
            name="customer_id"
            default="0"
        />
    </fieldset>
</form>