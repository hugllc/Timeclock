            default="0"
        />
        <field
            type="hidden"
            name="checked_out_time"
            default="0000-00-00 00:00:00"
        />
        <field
            type="hidden"
            name="created_by"
            default="0"
        />
        <field
            type="hidden"
            name="created"
            default="0000-00-00 00:00:00"
        />
        <field
            type="hidden"
            name="timesheet_id"
            default="0"
        />
