<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="HUGLLC\Component\Timeclock\Administrator\Field">
    <fieldset name="main" label="COM_TIMECLOCK_EDIT_REPORT">
        <field
            name="name"
            type="text"
            label="COM_TIMECLOCK_NAME"
            description="COM_TIMECLOCK_NAME_REPORT_DESC"
            class="span4"
            size="40"
            required="true"/>
        <field
            name="description"
            type="textarea"
            label="COM_TIMECLOCK_DESCRIPTION"
            description="COM_TIMECLOCK_NOTES_REPORT_DESC"
            rows="3"
            cols="40"/>

    </fieldset>
    <fieldset name="sidebar" label="COM_TIMECLOCK_EDIT_REPORT">
        <field
            name="published"
            type="list"
            class="form-select-color-state"
            default="1"
            size="1"
            label="JSTATUS"
            required="true"
            description="COM_TIMECLOCK_ACTIVE_REPORT_DESC">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
    </fieldset>
    <fieldset name="hidden">
        <field
            type="hidden"
            name="created_by"
            default="0"
        />
        <field
            type="hidden"
            name="created"
            default="0000-00-00 00:00:00"
        />
        <field
            type="hidden"
            name="report_id"
            default="0"
        />
        <field
            type="hidden"
            name="created"
            default="0000-00-00 00:00:00"
        />
        <field
            type="hidden"
            name="startDate"
            default="0000-00-00 00:00:00"
        />
        <field
            type="hidden"
            name="endDate"
            default="0000-00-00 00:00:00"
        />
        <field
            type="hidden"
            name="type"
            default="payroll"
        />
        <field
            type="hidden"
            name="filter"
            default=""
        />
        <field
            type="hidden"
            name="users"
            default=""
        />
        <field
            type="hidden"
            name="timesheets"
            default=""
        />
        <field
            type="hidden"
            name="projects"
            default=""
        />
        <field
            type="hidden"
            name="customers"
            default=""
        />
        <field
            type="hidden"
            name="departments"
            default=""
        />
    </fieldset>
</form>