<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="HUGLLC\Component\Timeclock\Administrator\Field">
    <fieldset name="main" label="COM_TIMECLOCK_EDIT_REPORT">
        <field
            name="name"
            type="text"
            label="COM_TIMECLOCK_NAME"
            description="COM_TIMECLOCK_NAME_REPORT_DESC"
            class="span4"
            size="40"
            required="true"/>
        <field
            name="description"
            type="textarea"
            label="COM_TIMECLOCK_DESCRIPTION"
            description="COM_TIMECLOCK_NOTES_REPORT_DESC"
            rows="3"
            cols="40"/>

    </fieldset>
    <fieldset name="sidebar" label="COM_TIMECLOCK_EDIT_REPORT">
        <field
            name="published"
            type="list"
            class="chzn-color-state span10"
            default="1"
            size="1"
            label="JSTATUS"
            required="true"
            description="COM_TIMECLOCK_ACTIVE_REPORT_DESC">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
    </fieldset>
</form>