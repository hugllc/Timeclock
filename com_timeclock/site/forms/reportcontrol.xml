<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="main" label="COM_TIMECLOCK_EDIT_TIMESHEET">
        <field
            name="start"
            type="calendar"
            label="from"
            description="COM_TIMECLOCK_DATE_FROM_HELP"
            required="true"
        />
        <field
            name="end"
            type="calendar"
            label="to"
            description="COM_TIMECLOCK_DATE_TO_HELP"
            required="true"
        />
        <field
            name="customer"
            type="timeclockcustomer"
            label="COM_TIMECLOCK_CUSTOMER"
            description="COM_TIMECLOCK_CUSTOMER_HELP"
        />
        <field
            name="category"
            type="timeclockcategory"
            class="span2"
            label="JCATEGORY"
            description="COM_TIMECLOCK_HOURS_CATEGORY_DESC"
            size="8"
        />
        <field
            name="projmanager"
            type="timeclockuser"
            class="span2"
            label="COM_TIMECLOCK_PROJECT_MANAGER"
            description="COM_TIMECLOCK_PROJECT_MANAGER_DESC"
            size="8"
        />
        <field
            name="usermanager"
            type="timeclockuser"
            class="span2"
            label="COM_TIMECLOCK_USER_MANAGER"
            description="COM_TIMECLOCK_USER_MANAGER_DESC"
            size="8"
        />
        <field
            name="groupby"
            type="list"
            class="span2"
            label="COM_TIMECLOCK_USER_MANAGER"
            description="COM_TIMECLOCK_USER_MANAGER_DESC"
            size="8"
        >
            <option value="CAGETORY">JCATEGORY</option>
            <option value="CUSTOMER">COM_TIMECLOCK_CUSTOMER</option>
            <option value="DEPARTMENT">COM_TIMECLOCK_DEPARTMENT</option>
            <option value="PROJECT">COM_TIMECLOCK_PROJECT</option>
        </field>
    </fieldset>
</form>