    <install>
        <queries>
            <query>
                CREATE TABLE IF NOT EXISTS `#__dfprefs` (
                  `id` int(11) NOT NULL default '0',
                  `name` varchar(128) NOT NULL default '',
                  `value` text NOT NULL,
                  `area` varchar(128) NOT NULL default '',
                  `type` varchar(32) NOT NULL default 'USER',
                  `visible` tinyint(4) NOT NULL default '0',
                  PRIMARY KEY  (`id`,`name`,`area`,`type`)
                );
            </query>
            <query>
                CREATE TABLE IF NOT EXISTS `#__dfprefs_define` (
                  `id` int(11) NOT NULL auto_increment,
                  `name` varchar(128) NOT NULL,
                  `type` varchar(32) NOT NULL,
                  `preftype` varchar(32) NOT NULL,
                  `area` varchar(128) NOT NULL,
                  `default` text NOT NULL,
                  `help` text NOT NULL,
                  `parameters` text NOT NULL,
                  PRIMARY KEY  (`id`),
                  UNIQUE KEY `name` (`name`,`area`)
                );
            </query>
        </queries>
    </install>
    <uninstall>
    </uninstall>
    <installfile>
