<?xml version="1.0" ?>
<mosinstall type="component">
    <name>dfprefs</name>
    <creationDate>October 2005</creationDate>
    <author>Scott Price</author>
    <copyright>2005-2007 Hunt Utilities Group, LLC</copyright>
    <authorEmail>prices@dflytech.com</authorEmail>
    <authorUrl>www.dflytech.com</authorUrl>
    <version>0.1.3</version>
    <files>
        <filename>dfprefs.php</filename>
        <filename>dfprefs.html.php</filename>
    </files>
    <install>
        <queries>
            <query>
                CREATE TABLE IF NOT EXISTS `#__dfprefs` (
                  `id` int(11) NOT NULL default '0',
                  `name` varchar(128) NOT NULL default '',
                  `value` text NOT NULL,
                  `area` varchar(128) NOT NULL default '',
                  `type` varchar(32) NOT NULL default 'USER',
                  `visible` tinyint(4) NOT NULL default '0',
                  PRIMARY KEY  (`id`,`name`,`area`,`type`)
                );
            </query>
            <query>
                CREATE TABLE IF NOT EXISTS `#__dfprefs_define` (
                  `id` int(11) NOT NULL auto_increment,
                  `name` varchar(128) NOT NULL,
                  `type` varchar(32) NOT NULL,
                  `preftype` varchar(32) NOT NULL,
                  `area` varchar(128) NOT NULL,
                  `default` text NOT NULL,
                  `help` text NOT NULL,
                  `parameters` text NOT NULL,
                  PRIMARY KEY  (`id`),
                  UNIQUE KEY `name` (`name`,`area`)
                );
            </query>
        </queries>
    </install>
    <uninstall>
    </uninstall>
    <installfile>
        <filename>install.dfprefs.php</filename>
    </installfile>
    <uninstallfile>
        <filename>uninstall.dfprefs.php</filename>
    </uninstallfile>
    <administration>
        <menu>dfPrefs</menu>
        <submenu>
            <menu task="config">Configuration</menu>
            <menu task="prefs">Define Preferences</menu>
            <menu task="users">Set User Preferences</menu>
            <menu task="system">Set System Preferences</menu>
            <menu task="install">Check Installation</menu>
            <menu task="about">About</menu>
        </submenu>
        <files>
            <filename>admin.dfprefs.php</filename>
            <filename>admin.dfprefs.html.php</filename>
            <filename>toolbar.dfprefs.php</filename>
            <filename>toolbar.dfprefs.html.php</filename>
            <filename>help/dfprefs.html</filename>
            <filename>help/dfprefs_edit.html</filename>
            <filename>dfprefs.class.php</filename>
            <filename>include/extra.inc.php</filename>
            <filename>include/tables.inc.php</filename>
        </files>
    </administration>
</mosinstall>
