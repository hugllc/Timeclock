<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<extension type="component" version="1.6.0" client="site" method="upgrade">
    <name>Timeclock</name>
    <creationDate>2009 10 09</creationDate>
    <author>Scott Price</author>
    <authorEmail>prices@hugllc.com</authorEmail>
    <authorUrl>http://dev.hugllc.com/index.php/Project:Timeclock</authorUrl>
    <copyright>2008-2009, 2011 Hunt Utilities Group, LLC</copyright>
    <license>GNU Public License V3</license>
    <version>0.7.6a</version>
    <description>This component implements a timeclock for employees to track time.</description>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/timeclock_customers.mysql.utf8.sql</file>
            <file driver="mysql" charset="utf8">sql/timeclock_prefs.mysql.utf8.sql</file>
            <file driver="mysql" charset="utf8">sql/timeclock_projects.mysql.utf8.sql</file>
            <file driver="mysql" charset="utf8">sql/timeclock_timesheet.mysql.utf8.sql</file>
            <file driver="mysql" charset="utf8">sql/timeclock_users.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
    </uninstall>
    <files folder="site">
        <filename>index.html</filename>
        <filename>timeclock.php</filename>
        <filename>controller.php</filename>
        <folder>controllers</folder>
        <folder>views</folder>
        <folder>models</folder>
        <folder>images</folder>
        <folder>tables</folder>
        <filename>LICENSE.TXT</filename>
    </files>
    <administration>
        <menu>Timeclock</menu>
        <submenu>
            <menu controller="config">Preferences</menu>
            <menu controller="users">User Configurations</menu>
            <menu controller="customers">Customers</menu>
            <menu controller="projects">Projects</menu>
            <menu controller="holidays">Holidays</menu>
            <menu controller="timesheets">Timesheets</menu>
            <menu controller="tools">Misc Tools</menu>
            <menu task="about">About</menu>
        </submenu>

        <files folder="admin">
            <filename>index.html</filename>
            <filename>admin.timeclock.php</filename>
            <filename>controller.php</filename>
            <folder>tables</folder>
            <folder>elements</folder>
            <folder>images</folder>
            <folder>lib</folder>
            <folder>sql</folder>
            <folder>controllers</folder>
            <folder>models</folder>
            <folder>views</folder>
            <folder>modules</folder>
        </files>
    </administration>
</extension>
