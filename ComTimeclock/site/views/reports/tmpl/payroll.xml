<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Payroll">
        <message>
            This is the payroll report
        </message>
    </layout>
    <state>
        <name>Reports</name>
        <description>This is the payroll report.</description>
    </state>
    <fields name="request" addfieldpath="/administrator/components/com_timeclock/elements">
        <fieldset name="request">
            <field name="period" type="list" default="payperiod" label="Default Period" description="The default period of time to show">
                <option value="day">Day</option>
                <option value="payperiod">Pay Period</option>
                <option value="month">Month</option>
                <option value="quarter">Quarter</option>
                <option value="year">Year</option>
            </field>
        </fieldset>
    </fields>
    <fields name="params" addfieldpath="/administrator/components/com_timeclock/elements">
        <fieldset name="basic">
            <field name="cell_fill" type="list" default=" " label="Cell Fill Character" description="This is what will be in the cell if there are 0 hours.">
                <option value=" ">None</option>
                <option value="0">0</option>
            </field>
            <field name="filter_order" type="list" default="u.name" label="Sort Field" description="The field to sort by">
                <option value="u.name">User's Name</option>
            </field>
            <field name="filter_order_Dir" type="list" default="ASC" label="Sort Direction" description="The whether to sort ascending or descending">
                <option value="ASC">asc</option>
                <option value="DESC">desc</option>
            </field>
            <field name="show_export" type="radio" default="1" label="Export" description="Show the export line">
                <option value="1">Show</option>
                <option value="0">Hide</option>
            </field>
        </fieldset>
    </fields>
</metadata>
