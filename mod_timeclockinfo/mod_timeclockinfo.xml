    <version>0.9.3</version>
	<description>MOD_TIMECLOCKINFO_DESC</description>
	<files>
		<filename module="mod_timeclockinfo">mod_timeclockinfo.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
	</files>
    <languages>
            <language tag="en-GB">language/en-GB/en-GB.mod_timeclockinfo.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.mod_timeclockinfo.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="showYTDHours" type="list" default="1" label="MOD_TIMECLOCKINFO_YTD" description="MOD_TIMECLOCKINFO_YTD_DESC">
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>
                <field name="showHoursPerWeek" type="list" default="1" label="MOD_TIMECLOCKINFO_HOURS_PER_WEEK" description="MOD_TIMECLOCKINFO_HOURS_PER_WEEK_DESC">
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>
                <field name="showPTO" type="list" default="1" label="MOD_TIMECLOCKINFO_SHOW_PTO_STATUS" description="MOD_TIMECLOCKINFO_SHOW_PTO_STATUS_DESC">
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
            </fieldset>
            <fieldset name="other">
            </fieldset>
        </fields>
    </config>
</extension>
